// Zed settings
//
// For information on how to configure Zed, see the Zed
// documentation: https://zed.dev/docs/configuring-zed
//
// To see all of Zed's default settings without changing your
// custom settings, run the `zed: Open Default Settings` command
// from the command palette
{
  "outline_panel": {
    "dock": "right"
  },
  "ui_font_size": 24,
  "ui_font_family": "Inter V",
  "ui_font_weight": 500,
  "buffer_font_size": 20,
  "buffer_font_family": "MonoLisa",
  "buffer_font_weight": 400,
  "vim_mode": true,
  "relative_line_numbers": true,
  "vertical_scroll_margin": 8,
  "extend_comment_on_newline": true,
  "restore_on_startup": "last_workspace",
  "centered_layout": {
    "left_padding": 0.2,
    "right_padding": 0.2
  },
  "theme": {
    "mode": "system",
    "light": "One Light",
    "dark": "Solarized Dark"
  },
  "assistant": {
    "default_model": {
      "provider": "anthropic",
      "model": "claude-3-5-sonnet-20240620"
    },
    "version": "2"
  },
  // 开启本地代理
  // "proxy": "http://127.0.0.1:7890",
  "tab_bar": {
    "show": true,
    "show_nav_history_buttons": false
  },
  "tabs": {
    "close_position": "right",
    "file_icons": true,
    "git_status": true
  },
  "inlay_hints": {
    "enabled": true,
    "show_type_hints": true,
    "show_parameter_hints": true,
    "show_other_hints": true,
    "edit_debounce_ms": 700,
    "scroll_debounce_ms": 50
  },
  "indent_guides": {
    "coloring": "indent_aware"
  },
  "soft_wrap": "none",
  "format_on_save": "on",
  "file_types": {
    "C++": ["c", "h", "cpp", "hpp"],
    "*.mdx": ["markdown"]
  },
  "file_scan_exclusions": [
    "**/.git",
    "**/.svn",
    "**/.hg",
    "**/CVS",
    "**/.DS_store",
    "**/Thumbs.db",
    "**/.classpath",
    "**/.settings",
    "**/vendor",
    "**/.tmp*"
  ],
  "search.exclude": {
    "**/*.snap": true,
    "**/.git": true,
    "**/.github": true,
    "**/.nuxt": true,
    "**/.output": true,
    "**/.pnpm": true,
    "**/.vscode": true,
    "**/.yarn": true,
    "**/node_modules": true,
    "**/out/**": true,
    "**/package-lock.json": true,
    "**/pnpm-lock.yaml": true,
    "**/temp": true,
    "**/yarn.lock": true,
    "**/CHANGELOG*": true,
    "**/LICENSE*": true
  },
  "terminal": {
    "font_family": "FiraCode Nerd Font",
    "toolbar": {
      "title": false
    },
    "copy_on_select": true
  },
  "git": {
    "enabled": true,
    "autoFetch": true,
    "autoFetchInterval": 600,
    "autoFetchOnFocus": true,
    "autoFetchOnWindowChange": true,
    "autoFetchOnBuild": true,
    "autoFetchOnBuildEvents": ["build", "run", "debug"],
    "autoFetchOnBuildEventsDelay": 1500,
    "git_gutter": "tracked_files",
    "git_status": true,
    "inline_blame": {
      "enabled": true,
      "position": "right"
    }
  },
  "languages": {
    "C++": {
      "formatter": {
        "external": {
          "command": "clang-format",
          "arguments": ["-style=file"]
        }
      }
    },
    "Go": {
      "code_actions_on_format": {
        "source.organizeImports": true
      }
    },
    "Rust": {
      "tab_size": 4
    },
    "TSX": {
      "code_actions_on_format": {
        "source.organizeImport": true,
        "source.fixAll.exlint": true
      }
    },
    "JavaScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true
      }
    },
    "TypeScript": {
      "code_actions_on_format": {
        "source.fixAll.eslint": true,
        "source.organizeImport": true
      }
    }
  },
  "lsp": {
    "rust-analyzer": {
      "initialization_options": {
        "checkOnSave": {
          // rust-analyzer.check.command (default: "check")
          // "command": "clippy"
        }
      }
    },
    "eslint": {
      "setting": {
        "codeActionOnSave": {
          "rules": ["import/order"]
        }
      }
    }
  },
  "telemetry": {
    "diagnostics": false,
    "metrics": false
  },
  "features": {
    "inline_completion_provider": "supermaven"
  }
}
