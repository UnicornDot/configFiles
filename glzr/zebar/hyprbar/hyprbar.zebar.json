{
  "$schema": "https://github.com/glzr-io/zebar/raw/v2.1.0/resources/widget-schema.json",
  "htmlPath": "./dist/index.html",
  "zOrder": "top_most",
  "shownInTaskbar": false,
  "focused": false,
  "resizable": true,
  "transparent": true,
  "caching": {
    "defaultDuration": 604800,
    "rules": []
  },
  "privileges": {
    "shellCommands": [
      {
        "program": "msedge",
        "argsRegex": "--url https://chat.deepseek.com"
      },
      {
        "program": "powershell",
        "argsRegex": "~/.glzr/zebar/OpenNotificationCenter.ps1"
      }
    ]
  },
  "presets": [
    {
      "name": "default",
      "anchor": "top_left",
      "offsetX": "0px",
      "offsetY": "0px",
      "width": "100%",
      "height": "40px",
      "monitorSelection": {
        "type": "all"
      },
      "dockToEdge": {
        "enabled": false,
        "edge": "top",
        "windowMargin": "0px"
      }
    }
  ]
}
